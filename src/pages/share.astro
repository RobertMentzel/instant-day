---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
import { Image } from "astro:assets";
import thumbsup from "../assets/images/thumbsup.png";
import "../styles/tailwind.css";
---

<MainLayout title="Share Your Instant">
  <article class="bg-primarycol relative p-6 m-6 flex flex-col gap-20">
    <h1 class="text-white">SHARE YOUR INSTANT</h1>
    <div class="grid grid-cols-2 gap-4">
      <div class="bg-slate-300 hover:bg-slate-400 flex flex-col items-center">
        <img
          src="/upload.svg"
          alt="billede 2"
          class="items-center w-10 mx-auto lg:mx-0 m-4"
        />
        <p class="cta-tekst">Upload Image</p>
      </div>
      <div class="bg-slate-300 hover:bg-slate-400 flex flex-col items-center">
        <img
          src="/scan.svg"
          alt="billede 2"
          class="items-center w-10 mx-auto lg:mx-0 m-4"
        />
        <p class="cta-tekst">Scan Your Instant</p>
      </div>
    </div>
    <div class="grid grid-cols-8 gap-2">
      <label class="cursor-pointer">
        <input type="checkbox" class="peer hidden" />
        <div class="p-4 bg-white peer-checked:bg-secondarycol"></div>
      </label>

      <a href="" class="text-white underline col-span-7"
        >Participants have to be 18+, portrayed persons must have given consent,
        and you agree that your instant can be exhibited and used to promote the
        photo contest.</a
      >
    </div>

    <div
      class="bg-secondarycol hover:bg-emerald-400 flex flex-col items-center"
    >
      <p class="cta-tekst text-white py-8">SUMBMIT INSTANT</p>
    </div>
  </article>
</MainLayout>
